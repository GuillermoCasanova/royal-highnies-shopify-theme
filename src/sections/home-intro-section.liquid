

<section class="home-intro-section">
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-12">
				<div class="home-intro-section__inner">
					<h2 class="headline  home-intro-section__headline">
						{{section.settings.headline}}
					</h2>
					<div class="home-intro-section__body">
						{{section.settings.body}}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>



{% schema %}
  {
    "name": "Home Intro Section",
    "settings": [
      {
        "type": "text",
        "id": "headline",
        "label": "Headline",
        "default": "This is  headline."
      },
       {
        "type": "richtext",
        "id": "body",
        "label": "Copy Body"
      }
    ],
    "presets": [
      {
        "name": "Home Intro Section",
        "category": "Copy Sections"
      }
    ]
  }

{% endschema %}
